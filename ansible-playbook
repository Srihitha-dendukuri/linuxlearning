#install, start, enable, stop, and delete service 
---
- name: Example playbook with tagged tasks
  become: yes
  hosts: web
  tasks:
    - name: Install Apache HTTP server
      yum:
        name: httpd
        state: present
      tags:
        - install_httpd


    - name: Start and enable Apache HTTP server
      service:
        name: httpd
        state: started
        enabled: yes
      tags:
        - start_httpd

    - name: stop and delete apache HTTPS server
      service:
        name: httpd
        state: stopped
        enabled: no
      tags:
        - stop_httpd

    - name: delete apache HTTPS server
      package:
        name: httpd
        state: absent
      tags:
        - delete_https


#commands to run the tags

-> ansible-playbook -i inventory_file_name playbook-file-name --tags tag_name_which-you-wants-to-run --list hostname
example: ansible-playbook -i deployserver tag_apache.yml --tags install_httpd --list group1

